{
  "manifest_version": 3,
  "name": "SpotExt",
  "description": "Extension to find top tracks by selected text",
  "version": "1.0",
  "permissions": ["contextMenus", "storage", "identity", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TopTracks"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["icons/close_icon.svg"]
  }]
}
